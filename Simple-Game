import tkinter as tk
import random

# --- 1. ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏Å‡∏° (‡∏ï‡∏≤‡∏°‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏¢ Week 3-4) ---
score = 0           # ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏µ‡πà 0
time_left = 60      # ‡πÄ‡∏ß‡∏•‡∏≤ 60 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
animals = ["üê∂", "üê±", "üê∑", "üê∏", "üêµ"] # ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå

# --- 2. ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô: ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏°‡∏™‡∏±‡∏ï‡∏ß‡πå ---
def on_click():
    global score
    score = score + 1                       # ‡∏ö‡∏ß‡∏Å‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô
    label_score.config(text=f"‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: {score}")
    move_animal()                           # ‡∏™‡∏±‡πà‡∏á‡πÉ‡∏´‡πâ‡∏¢‡πâ‡∏≤‡∏¢‡∏´‡∏ô‡∏µ

# --- 3. ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô: ‡∏™‡∏∏‡πà‡∏°‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡πÉ‡∏´‡∏°‡πà ---
def move_animal():
    # ‡∏™‡∏∏‡πà‡∏°‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏±‡∏ï‡∏ß‡πå‡∏ï‡∏±‡∏ß‡πÉ‡∏´‡∏°‡πà
    new_animal = random.choice(animals)
    btn_animal.config(text=new_animal)
    
    # ‡∏™‡∏∏‡πà‡∏°‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á X, Y (‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡∏ï‡∏Å‡∏Ç‡∏≠‡∏ö‡∏à‡∏≠)
    x = random.randint(20, 350)
    y = random.randint(80, 450)
    btn_animal.place(x=x, y=y)

# --- 4. ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô: ‡∏ô‡∏≤‡∏¨‡∏¥‡∏Å‡∏≤‡∏ô‡∏±‡∏ö‡∏ñ‡∏≠‡∏¢‡∏´‡∏•‡∏±‡∏á ---
def timer_loop():
    global time_left
    if time_left > 0:
        time_left = time_left - 1           # ‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤
        label_time.config(text=f"‡πÄ‡∏ß‡∏•‡∏≤: {time_left}")
        window.after(1000, timer_loop)      # ‡∏≠‡∏µ‡∏Å 1 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ‡πÉ‡∏´‡πâ‡∏ó‡∏≥‡∏ã‡πâ‡∏≥
    else:
        label_time.config(text="‡∏´‡∏°‡∏î‡πÄ‡∏ß‡∏•‡∏≤!", fg="red")
        btn_animal.config(state="disabled") # ‡∏à‡∏ö‡πÄ‡∏Å‡∏° (‡∏Å‡∏î‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ)

# ==========================================
# ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠ (UI)
# ==========================================
window = tk.Tk()
window.title("Project N")
window.geometry("400x550") # ‡∏Ç‡∏ô‡∏≤‡∏î‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠

# ‡∏õ‡πâ‡∏≤‡∏¢‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô & ‡πÄ‡∏ß‡∏•‡∏≤
label_score = tk.Label(window, text="‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: 0", font=("Arial", 24))
label_score.pack(pady=10)

label_time = tk.Label(window, text="‡πÄ‡∏ß‡∏•‡∏≤: 60", font=("Arial", 20))
label_time.pack()

# ‡∏õ‡∏∏‡πà‡∏°‡∏ï‡∏±‡∏ß‡∏™‡∏±‡∏ï‡∏ß‡πå (‡∏ï‡∏±‡∏ß‡πÉ‡∏´‡∏ç‡πà‡πÜ ‡∏ï‡∏≤‡∏° Week 4)
btn_animal = tk.Button(window, text="‚ùì", font=("Arial", 40), command=on_click)
btn_animal.place(x=150, y=200) # ‡∏ß‡∏≤‡∏á‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÅ‡∏£‡∏Å

# ‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏Å‡∏°‡πÄ‡∏•‡∏¢
move_animal()   # ‡∏™‡∏∏‡πà‡∏°‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÅ‡∏£‡∏Å
timer_loop()    # ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏à‡∏±‡∏ö‡πÄ‡∏ß‡∏•‡∏≤
window.mainloop()
